@model Sync_Task3.ViewsModels.CourseTeacherViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class=" text-white">Create Course</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.message != null)
        {
            <h5 class="alert alert-danger">@ViewBag.message</h5>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-white"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label text-white"> Teacher</label>
                <select asp-for="TeacherId" class="form-control"
                asp-items="@(new SelectList(Model.Teachers , "Id" ,"Name"))"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-danger" @Html.ActionLink("Back" , "Index","Admin")</a>
            </div>
        </form>
    </div>
</div>
       


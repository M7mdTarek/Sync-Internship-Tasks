@model Sync_Task1.Models.Developer

@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-3 mb-3">Details of @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-5">
            @Html.DisplayNameFor(model => model.id) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2 mb-5">
            Image :
        </dt>
        <dd class="col-sm-10">
            <img src="/uploads/@Model.imgUrl" class="img-thumbnail" style="width:150px;"/>
        </dd>
        <dt class="col-sm-2 mb-5">
            @Html.DisplayNameFor(model => model.Name) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 mb-5">
            @Html.DisplayNameFor(model => model.role) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning text-white">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

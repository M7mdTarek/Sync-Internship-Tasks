@model Sync_Task1.Models.Solution

@{
    ViewData["Title"] = "Delete";
}

@if (ViewBag.warning != null)
{
    <h4 class="alert alert-danger mt-4"> @ViewBag.warning</h4>
}

<h1 class="text-danger">Are you sure you want to delete @Model.Title ?</h1>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Time it will take in hours
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.timeInHours)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>

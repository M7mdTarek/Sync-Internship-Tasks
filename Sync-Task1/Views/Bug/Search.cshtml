@model IEnumerable<Sync_Task1.Models.Bug>

@{
    ViewData["Title"] = "Search";
}


@if (Model.Count() == 0)
{
    <h1 style="position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);">
        There is no result 
    </h1>
}
else
{
    <h1 class="mx-auto p-2 mb-3" style="max-width: 350px;">@Model.Count() Founded Bugs</h1>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    Developer
                </th>
                <th>
                    Solution
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.state)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.priority)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.developer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.solution.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.priority)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning text-white">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info text-white">Info</a>
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

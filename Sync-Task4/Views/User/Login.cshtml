@model Sync_Task4.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center ">
    @if (ViewBag.wrongid != null)
    {
        <h1 class="alert alert-danger">@ViewBag.wrongid</h1>
    }
    @if (ViewBag.wrongpass != null)
    {
        <h1 class="alert alert-danger">@ViewBag.wrongpass</h1>
    }
    <form style="width:400px;" class="border-5 border-black border rounded-3 m-auto" asp-action="Login">
        <label for="inputEmail3" class="col-sm-5 col-form-label mt-5">User ID</label>
        <div class="col-sm-10 text-center m-auto">
            <input type="text" class="form-control" id="inputEmail3" asp-for="@Model.Id">
        </div>

        <label for="inputPassword3" class="col-sm-5 col-form-label">Password</label>
        <div class="col-sm-10 text-center m-auto">
            <input type="password" class="form-control" id="inputPassword3" asp-for="@Model.password">
        </div>

        <button type="submit" class="btn btn-primary mt-5 mb-5">Sign in</button>
    </form>
</div>
